{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".output/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["**/*.{js,jsx,ts,tsx,mjs,cjs}", ".oxlintrc.json"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "inputs": ["**/*.{js,jsx,ts,tsx,mjs,cjs}", ".oxlintrc.json"]
    },
    "format": {
      "dependsOn": ["^format"],
      "inputs": ["**/*.{js,jsx,ts,tsx,mjs,cjs}", ".oxfmtrc.json"]
    },
    "format:fix": {
      "dependsOn": ["^format:fix"],
      "inputs": ["**/*.{js,jsx,ts,tsx,mjs,cjs}", ".oxfmtrc.json"]
    },
    "debug": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": true,
      "persistent": true
    },
    "test": {},
    "test:e2e": {},
    "typecheck": {},
    "clean": {}
  },
  "ui": "tui"
}
