{
  "name": "SojuStack",
  "private": true,
  "description": "Starter kit for building scalable web, backend, and mobile applications",
  "license": "UNLICENSED",
  "author": "rykuno",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:setup": "pnpm dlx tsx setup.ts",
    "lint:fix": "oxlint --fix --fix-suggestions --fix-dangerously .",
    "lint": "oxlint --type-aware --type-check .",
    "format": "oxfmt .",
    "check-types": "turbo run check-types",
    "typecheck": "turbo run typecheck",
    "clean": "rimraf dist node_modules pnpm-lock.yaml",
    "api:openapi:generate": "pnpm -C apps/api openapi:generate"
  },
  "devDependencies": {
    "chalk": "^5.6.2",
    "lefthook": "^2.1.1",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.1",
    "rimraf": "^6.1.3",
    "turbo": "^2.8.10",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=25.2.1"
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "overrides": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "typescript": "5.9.3",
      "openapi-typescript": "^7.10.1",
      "@types/react": "^19.2.0",
      "@types/node": "^24.7.2",
      "better-auth": "^1.4.1",
      "date-fns": "^4.1.0"
    },
    "ignoredBuiltDependencies": [
      "msw",
      "prisma"
    ],
    "onlyBuiltDependencies": [
      "@scarf/scarf",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": "pnpm run lint"
  }
}
