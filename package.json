{
  "name": "SojuStack",
  "private": true,
  "description": "Starter kit for building scalable web, backend, and mobile applications",
  "author": "rykuno",
  "license": "UNLICENSED",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:setup": "pnpm dlx tsx setup.ts",
    "fix": "oxlint --fix --fix-suggestions --fix-dangerously .",
    "lint": "oxlint .",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "typecheck": "turbo run typecheck",
    "clean": "rimraf dist node_modules pnpm-lock.yaml"
  },
  "devDependencies": {
    "chalk": "^5.6.2",
    "lefthook": "^1.13.6",
    "oxlint": "^1.22.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.8",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=24.4.1"
  }
}
