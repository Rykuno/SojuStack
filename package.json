{
  "name": "SojuStack",
  "private": true,
  "description": "Starter kit for building scalable web, backend, and mobile applications",
  "author": "rykuno",
  "license": "UNLICENSED",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:setup": "pnpm dlx tsx setup.ts",
    "fix": "oxlint --fix --fix-suggestions --fix-dangerously .",
    "lint": "oxlint .",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "typecheck": "turbo run typecheck",
    "clean": "rimraf dist node_modules pnpm-lock.yaml"
  },
  "devDependencies": {
    "chalk": "^5.6.2",
    "lefthook": "^2.0.4",
    "oxlint": "^1.28.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "turbo": "^2.6.1",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=24.4.1"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "typescript": "5.9.3",
      "openapi-typescript": "^7.9.1",
      "@types/react": "^19.2.0",
      "@types/node": "^24.7.2",
      "better-auth": "^1.3.34",
      "date-fns": "^4.1.0"
    }
  }
}
