{
  "name": "api",
  "description": "API for the Partytrick",
  "types": {
    "openapi": "./generated/openapi.d.ts"
  },
  "private": true,
  "scripts": {
    "build": "nest build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "dev": "nest start --watch",
    "email:dev": "email dev --dir ./src/notifications/emails --port 3030",
    "nuke": "docker compose down -v --remove-orphans && docker compose up -d",
    "start": "nest start",
    "debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@itgorillaz/configify": "^4.0.1",
    "@keyv/redis": "^5.1.0",
    "@keyv/valkey": "^1.0.8",
    "@nest-lab/throttler-storage-redis": "^1.1.0",
    "@nestjs-cls/transactional": "^3.1.0",
    "@nestjs-cls/transactional-adapter-drizzle-orm": "^1.2.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@react-email/components": "^0.5.0",
    "@react-email/render": "1.2.0",
    "argon2": "^0.43.1",
    "better-auth": "^1.3.34",
    "cache-manager": "^7.1.1",
    "cacheable": "^1.10.3",
    "chalk": "^5.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "1.0.0-beta.1-ac4ce44",
    "drizzle-orm": "1.0.0-beta.1-ac4ce44",
    "keyv": "^5.5.0",
    "klaviyo-api": "^19.0.2",
    "minio": "^8.0.5",
    "nanoid": "^5.1.5",
    "nestjs-cls": "^6.0.1",
    "pg": "^8.16.3",
    "posthog-node": "^5.7.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.0.1",
    "rxjs": "^7.8.2",
    "set-cookie-parser": "^2.7.1",
    "sharp": "^0.34.3",
    "timezones-list": "^3.1.0",
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@package/typescript-config": "workspace:*",
    "@react-email/preview-server": "4.2.8",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@types/argon2": "^0.15.4",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.9",
    "@types/supertest": "^6.0.3",
    "globals": "^16.3.0",
    "install": "^0.13.0",
    "jest": "^30.0.5",
    "openapi-typescript": "^7.8.0",
    "pnpm": "^10.14.0",
    "react-email": "4.2.8",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.17.1"
  }
}
