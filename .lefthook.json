{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "no_tty": true,
  "output": ["failure"],
  "pre-commit": {
    "commands": {
      "oxlint": {
        "glob": "**/*.{js,jsx,ts,tsx}",
        "run": "pnpm exec oxlint --fix --fix-suggestions --fix-dangerously {staged_files}",
        "stage_fixed": true
      }
    }
  }
}
